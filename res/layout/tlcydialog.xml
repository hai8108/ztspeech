<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent" >
    <RelativeLayout
        android:layout_width="380dip"
        android:layout_height="200dip"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/tanchu_bg" >
        <RelativeLayout
            android:id="@+id/titleLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >
            <TextView
                android:id="@+id/title"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dip"
                android:layout_marginTop="20dip"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/cancelIcon"
                style="@style/dialog_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dip"
                android:visibility="gone" >
            </Button>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleLayout"
            android:layout_centerInParent="true" >
            <TextView
                android:id="@+id/message"
                android:layout_width="fill_parent"
                android:layout_height="65dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:autoText="true"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editMessage"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:gravity="left"
                android:hint=""
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />
            <EditText
                android:id="@+id/editBigMessage"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:gravity="center"
                android:hint=""
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />
            <ListView
                android:id="@+id/listView0"
                style="@style/listview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:divider="@drawable/ic_launcher"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutBottom01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dip"
            android:visibility="gone" >
            <Button
                android:id="@+id/BtnOK"
                style="@style/dialog_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dip"
                android:text="@string/OK" >
            </Button>
            <Button
                android:id="@+id/BtnCancel"
                style="@style/dialog_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dip"
                android:text="@string/CANCEL" >
            </Button>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutBottom02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dip" >
            <Button
                android:id="@+id/btnOnlyOK"
                style="@style/dialog_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:text="@string/OK" >
            </Button>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>